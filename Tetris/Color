public class Color{
    private String yellow="yellow";
    private String cyan="cyan";
    private String blue="cyan";
    private String orange="orange";
    private String green="green";
    private String purple="purple";
    private String red="red";

    protected chooseColor(){
        String color;
        String colors[]={yellow,cyan,blue,orange,green,purple,red};
        Random r = new Random();
        int random = r.nextInt(7); //random de n√∫meros de 0-6
        String color=colors[random];
        return color;
    }
}